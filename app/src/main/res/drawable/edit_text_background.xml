<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/edit_text_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main shape with black background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Black background color -->
            <corners android:radius="2dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- White bottom part -->
    <item android:right="3dp" android:top="3dp" android:bottom="3dp" android:left="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/maire"/> <!-- White color for the bottom part -->
        </shape>
    </item>
</layer-list>
