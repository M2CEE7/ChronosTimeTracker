<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Other theme items -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>

    </style>




    <style name="WhiteTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomSpinnerTheme" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:backgroundTint">@color/white</item> <!-- Background tint for the spinner -->
    </style>

    <style name="SpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/WhiteTextAppearance</item>
    </style>
    <style name="SpinnerDropDownItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/WhiteTextAppearance</item>
        <item name="android:background">@color/maire</item> <!-- Set the background color -->

    </style>





    <style name="WhiteTextAndIconMenu" parent="Widget.Design.NavigationView">
        <!-- Set the text color to white -->
        <item name="android:textColor">@color/white</item>

        <!-- Set the icon tint to white -->
        <item name="android:tint">@color/white</item>

        <!-- Optional: Set the background to transparent for ripple effect on API 21+ -->
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="BottomNavBarStyle" parent="Widget.Design.BottomNavigationView">
        <!-- Set background color to white -->
        <item name="android:background">@color/maire</item>
        <item name="android:tint">@android:color/white</item>
        <!-- Customize other properties as needed -->
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/black</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
</resources>